{
  "name": "rifaz-backend",
  "version": "1.0.0",
  "description": "Backend API para Sistema de Rifas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "worker": "bun run --hot src/worker.ts",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:studio": "bunx prisma studio",
    "test": "bun test",
    "type-check": "bunx tsc --noEmit",
    "lint": "bunx eslint src --ext .ts,.tsx",
    "lint:fix": "bunx eslint src --ext .ts,.tsx --fix",
    "format": "bunx prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "bunx prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "install": "bun install",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/static": "^1.4.4",
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.12",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.9",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "bun-types": "latest",
    "eslint": "^9.15.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.1",
    "typescript": "^5.9.3"
  }
}
